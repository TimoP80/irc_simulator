{
  "appId": "com.stationv.ircsimulator",
  "productName": "Station V - Virtual IRC Simulator",
  "asar": false,
  "asarUnpack": [
    "node_modules/electron/dist/**/*"
  ],
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/",
    "dist-electron/",
    "server/",
    "node_modules/",
    "!node_modules/electron/dist/",
    "default-config.json"
  ],
  "extraFiles": [
    {
      "from": "node_modules/electron/dist/icudtl.dat",
      "to": "icudtl.dat"
    },
    {
      "from": "node_modules/electron/dist/chrome_100_percent.pak",
      "to": "chrome_100_percent.pak"
    },
    {
      "from": "node_modules/electron/dist/chrome_200_percent.pak",
      "to": "chrome_200_percent.pak"
    },
    {
      "from": "node_modules/electron/dist/resources.pak",
      "to": "resources.pak"
    },
    {
      "from": "node_modules/electron/dist/snapshot_blob.bin",
      "to": "snapshot_blob.bin"
    }
  ],
  "extraResources": [
    {
      "from": "server",
      "to": "server"
    }
  ],
        "win": {
          "target": [
            {
              "target": "nsis",
              "arch": ["x64", "ia32"]
            },
            {
              "target": "portable",
              "arch": ["x64"]
            }
          ],
          "icon": "favicon.ico",
          "requestedExecutionLevel": "asInvoker",
          "sign": false,
          "certificateFile": null,
          "certificatePassword": null
        },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "favicon.ico",
    "category": "public.app-category.social-networking"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64"]
      }
    ],
    "icon": "favicon.ico",
    "category": "Network"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "installerIcon": "favicon.ico",
    "uninstallerIcon": "favicon.ico",
    "license": "LICENSE.txt",
    "warningsAsErrors": false,
    "runAfterFinish": true,
    "menuCategory": "Social Networking",
    "shortcutName": "Station V IRC Simulator",
    "artifactName": "${productName}-${version}-${arch}-Setup.${ext}"
  },
  "dmg": {
    "title": "Station V - Virtual IRC Simulator",
    "icon": "favicon.ico"
  },
  "publish": null
}
